{
  "env": {
    "node": true,
    "es2021": true
  },
  "extends": "eslint:recommended",
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module"
  },
  "rules": {
    "eqeqeq": ["warn", "always"],
    "no-unused-vars": ["warn", { 
      "argsIgnorePattern": "^_",
      "varsIgnorePattern": "^_"
    }],
    "no-console": ["warn", { 
      "allow": ["warn", "error", "info"]
    }],
    "no-var": "warn",
    "prefer-const": "warn",
    "no-multiple-empty-lines": ["warn", { "max": 2 }],
    "semi": ["warn", "always"],
    "quotes": ["warn", "single", { "avoidEscape": true }],
    "no-undef": "error",
    "no-redeclare": "error",
    "no-dupe-keys": "error",
    "no-unreachable": "error",
    "no-irregular-whitespace": "warn",
    "array-callback-return": ["warn", { "allowImplicit": true }],
    "consistent-return": "warn",
    "no-param-reassign": "off",
    "prefer-arrow-callback": "off"
  },
  "ignorePatterns": [
    "node_modules/",
    "test/",
    "*.test.js",
    "*.spec.js"
  ]
}
